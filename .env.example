PORT=3000
NODE_ENV=development

# Local Docker/Postgres example
DATABASE_URL=postgresql://wallet:wallet@localhost:5432/wallet_db?schema=public

# Local Docker/Redis example
REDIS_URL=redis://localhost:6379

IDEMPOTENCY_CACHE_TTL_SECONDS=86400
DISTRIBUTED_LOCK_TTL_MS=5000
DISTRIBUTED_LOCK_RETRY_COUNT=3
DISTRIBUTED_LOCK_RETRY_DELAY_MS=50

# If your Redis provider requires auth, use URL format like:
# REDIS_URL=redis://default:<password>@<host>:<port>